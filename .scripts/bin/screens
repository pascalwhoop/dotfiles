#!/bin/bash
set -ox
if [[ $1 == 'hhd' ]]; then
    xrandr --output HDMI1 --auto --above eDP1 
fi
if [[ $1 == 'hd' ]]; then
    xrandr --output DP1 --auto --above eDP1 
fi
if [[ $1 == 'h4k' ]]; then
    xrandr --output HDMI1 --mode 3840x2160 --above eDP1 --dpi 115
    xrandr --output eDP1 --off
    hidpi
    i3 restart
fi
if [[ $1 == '4k' ]]; then
    xrandr --newmode "3008x1692_60.00"  433.69  3008 3240 3568 4128  1692 1693 1696 1751  -HSync +Vsync
    xrandr --addmode "Virtual-1" "3008x1692_60.00"
    xrandr --output Virtual-1 --mode "3008x1692_60.00"
    #hidpi
    #i3 restart
fi
if [[ $1 == 'mobile' ]]; then
    xrandr --output eDP1 --auto
    xrandr --output DP1-1 --off
    xrandr --output DP1-2 --off
    xrandr --output HDMI1 --off
    xrandr --output DP1 --off
    lodpi
fi
