label-unmounted-foreground         = ${colors.foreground-alt}
format-prefix-underline            = ${colors.foreground}
format-underline                   = ${colors.foreground}
label-indicator-underline          = ${colors.foreground}

[module/i3]

ws-icon-0 = 1;1
