#!/bin/bash
# name of the object
target=$1

# Generate a new password
password=$(shuf -n3 /usr/share/dict/words | tr '\n' ' ')

# Prompt for email address
read -p "Enter email address: " email

# Store password and email in pass
echo """
$password 
username: $email

note: generated using bash script
""" | pass insert -m "$target"

# Copy password to clipboard
echo -n "$password" | pbcopy

# Output success message
echo "Password generated and stored in pass. Password copied to clipboard."

